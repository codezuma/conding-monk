---
import Logo from "../ui/logo.astro";
---
<section
class=" container-main max-w-7xl mx-auto gap-12 relative flex-col md:flex-row z-50 md:-bottom-20 -bottom-32 justify-between flex bg-gray-50 shadow rounded-2xl md:p-16 p-8"
>
<main>
    <h2 class="text-3xl font-semibold mb-2">
        Start your 30-day free trial
    </h2>
    <p class="text-xl text-gray-600">
        Join over 4,000+ startups already growing with Untitled.
    </p>
</main>
<div class="flex gap-4 h-fit md:flex-row flex-col ">
    <button class="button-outline md:button-large whitespace-nowrap">Learn More</button>
    <button class="button-primary md:button-large whitespace-nowrap">Get started</button>
</div>
</section>
<footer class="pt-52 bg-gray-900 pb-12 relative w-full">
   
    <main class="flex gap-12  container-main flex-wrap">
        <div class="flex flex-1 min-w-[300px] flex-col  gap-6">
            <Logo />
            <p class="text-lg md:w-3/5 w-full text-white">
                Design amazing digital experiences that create more happy in the
                world.
            </p>
        </div>
        <div class="flex-1 flex flex-wrap gap-8">
            <div class="w-32 flex-1">
                <h3 class="text-gray-300 mb-4  text-sm">product</h3>
                <ul class="flex flex-col gap-3 text-gray-100">
                    {
                        [
                            "Product",
                            "Overview",
                            "Features",
                            "Solutions",
                            "New",
                            "Tutorials",
                            "Pricing",
                            "Releases",
                        ].map((link) => <a href="">
                            <li>{link}</li>
                            </a>
                            )
                    }
                </ul>
            </div>
            <div class="w-32 flex-1">
                <h3 class="text-gray-300 mb-4  text-sm">product</h3>
                <ul class="flex flex-col gap-3 text-gray-100">
                    {
                        [
                            "Product",
                            "Overview",
                            "Features",
                            "Solutions",
                            "New",
                            "Tutorials",
                            "Pricing",
                            "Releases",
                        ].map((link) => <a href="">
                            <li>{link}</li>
                            </a>
                            )
                    }
                </ul>
            </div>
            <div class="flex-1"> 
                <h3 class="text-lg mb-4 text-white">Stay up to date</h3>

                <div class="flex flex-col md:flex-row mb-1 gap-4">
                    <input class="px-4 outline-none border-2 h-12 focus:border-primary focus:border-2 border- rounded bg-white " placeholder="Enter your email" />
                    <button class="button-primary">Subscribe</button>
                </div>
            </div>
        </div>
    </main>
</footer>
