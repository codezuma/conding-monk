---
import HeroSection from "../components/sections/resource/hero-section.astro";
import PageLayout from "../layout/page-layout.astro";
import BlogSection from "../components/sections/blog/blog-section.astro";
import NewsletterSection from "../components/sections/newsletter-section.astro";
import FooterLarge from "../components/sections/home/footer-large.astro";
import ResourceCard from "../components/shared/blog/resource-card.astro";
const resource = {
        title: "Cooking Tips and Recipes",
        date: "10 Mar 2024",
        imageSrc: "https://example.com/image3.jpg", // Replace with your image URL
        altText: "Image Alt Text 3",
        description: "Discover new cooking tips and delicious recipes from around the world.",
        tags: ["cooking", "recipes", "food"]
    }
---
<PageLayout dark>
    <HeroSection/>
    <div class="container-main -mt-20">
        <ResourceCard {...resource}   className="w-full"/>
    </div>
    <BlogSection/>
    <NewsletterSection/>
    <FooterLarge/>
</PageLayout>